{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(echo:*)",
      "Bash(uv run -m pytest:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Read|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"Add-Type -AssemblyName System.Speech; (New-Object System.Speech.Synthesis.SpeechSynthesizer).Speak('done');\""
          }
        ]
      }
    ]
  }
}
